<Window x:Class="MedicalLabAnalyzer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Medical Lab Analyzer" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <ToolBar Grid.Row="0">
            <Button Content="Patients" Click="NavigateToPatientCommand" Margin="5"/>
            <Button Content="Exams" Click="NavigateToExamCommand" Margin="5"/>
            <Button Content="Analysis" Click="NavigateToVideoAnalysisCommand" Margin="5"/>
            <Button Content="Reports" Click="NavigateToReportsCommand" Margin="5"/>
        </ToolBar>
        
        <ContentControl Grid.Row="1" Content="{Binding CurrentView}">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type vm:PatientViewModel}">
                    <views:PatientManagementView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:ExamViewModel}">
                    <views:ExamManagementView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:VideoAnalysisViewModel}">
                    <views:VideoAnalysisView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:ReportsViewModel}">
                    <views:ReportsView/>
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>
    </Grid>
</Window>